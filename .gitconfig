[user]
	name = raold
	email = raoldham@gmail.com
[credential]
	helper = 
	helper = /sbin/git-credential-manager
	credentialStore = gpg
[credential "https://dev.azure.com"]
	useHttpPath = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	line-numbers = true
	side-by-side = false

[alias]
	st = status -sb
	co = checkout
	br = branch -vv
	cm = commit -m
	ca = commit --amend --no-edit
	unstage = reset HEAD --
	undo = reset --soft HEAD~1
	lg = log --graph --oneline --all --decorate -20
	last = log -1 HEAD --stat
	staged = diff --cached
	sync = fetch --all --prune
